<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>구구단</title>
</head>
<body>
    <h2>구구단</h2>
    <form onsubmit="onSubmitForm(e)">
        <p id='question'></p>
        <input type="text" id="value" placeholder="답 입력" />
        <button type="button" onClick="onSubmitForm()">정답 입력</button>
    </form>
    <p id="result"></p>
    <script>
        let result;
        function randomQuestion () {
            const value1 = Math.ceil(Math.random() * 9);
            const value2 = Math.ceil(Math.random() * 9);
            result = value1 * value2;
            document.getElementById('question').innerHTML = `${value1}x${value2}`;
        }
        const onSubmitForm = (e) => {
            if(result === parseInt(document.getElementById('value').value)){
                alert('딩동댕');
                document.getElementById('value').value = "";
                document.getElementById('value').focus();
                randomQuestion();
            }else {
                alert('땡');
                document.getElementById('value').value = "";
                document.getElementById('value').focus();
            }
        }
        randomQuestion();
    </script>
</body>
</html>